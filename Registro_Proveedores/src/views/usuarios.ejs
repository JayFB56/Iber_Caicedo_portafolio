<section class="principal">
  <div class="fondo">
      <img class="hero-image" src="../Img/fondo.webp" width="800" height="605" alt="imagen principal del sitio"> 
    </div>
<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="">
      <div class="login d-flex align-items-center py-5" id="contenedor">
        <div class="container">
          <div class="row">
              <div class="col-md-9 col-lg-8 mx-auto">
              <h1 class="login-heading mb-4" style="font-family: 'Montserrat', sans-serif; font-size: 2.8rem; color: #2ecc71; text-shadow: 2px 2px 8px #333; letter-spacing: 2px; background: linear-gradient(90deg, #2ecc71 0%, #3498db 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Provedius</h1>
              <form action="/login" method="post">

                <% if (typeof error !== 'undefined') { %>
                  <div class="alert alert-danger" role="alert"><%= error %></div>
                <% } %>
                <div class="form-label-group">
                  <input type="text" id="inputEmail" name="idUsuario" class="form-control" placeholder="Usuario" required autofocus pattern="(?=.*[A-Za-z])[A-Za-z0-9]+" maxlength="50">
                </div>
                <p></p>

                <div class="form-label-group">
                  <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Contraseña" required>
                </div>
                <p></p>

                
                <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2"  type="submit">Ingresar
                  <a onclick="location.href='/customer'" href="/" type="sumit" ></a>
                </button>
                <div class="text-center">
                  <p class="mt-3">¿No tienes credenciales? <a href="/register">Crear cuenta</a></p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  

</div>
</section>




